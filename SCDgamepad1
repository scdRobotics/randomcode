public class SCDgamepad1 {
	//Written by Jack Crane on 12/27/2019
	
	private traditionalgamepad1 = gamepad1;
	private traditionalgamepad2 = gamepad2;
	
	private gp1
	private gp2
	
	public boolean x;
	public boolean y;
	public boolean a;
	public boolean b;
	
	public boolean left_bumper;
	public boolean right_bumper;
	
	public boolean back;
	
	public boolean dpad_up;
	public boolean dpad_down;
	public boolean dpad_left;
	public boolean dpad_right;
	
	public boolean left_stick_button;
	public boolean right_stick_button;
	
	public boolean start;
	
	public boolean guide;
	
	public protected float dpadThreshold;	
	
	public int id;
	
	public static int ID_SYNTHETIC;
	
	public static int ID_UNASSOCIATED;
	
	public protected float joystickDeadZone;
	
	public long timestamp;
	
	public void init() {
		instantiateSCDgamepad();
	}
	
	public void loop() {
		SCDgamepad1.x = gamepad1.x;
		SCDgamepad1.y = gamepad1.y;
		SCDgamepad1.a = gamepad1.a;
		SCDgamepad1.b = gamepad1.b;
		
		SCDgamepad1.left_trigger = gamepad1.left_trigger;
		SCDgamepad1.right_trigger = gamepad1.right_trigger;
		
		SCDgamepad1.right_bumper = gamepad1.right_bumper;
		SCDgamepad1.left_bumper = gamepad1.left_bumper;
		
		SCDgamepad1.left_stick_y = gamepad1.left_stick_y;
		SCDgamepad1.right_stick_y = gamepad1.right_stick_y;
		SCDgamepad1.left_stick_x = gamepad1.left_stick_x;
		SCDgamepad1.right_stick_x = gamepad1.right_stick_x;
		
		SCDgamepad1.back = gamepad1.back;
		
		SCDgamepad1.dpad_up = gamepad1.dpad_up;
		SCDgamepad1.dpad_down = gamepad1.dpad_down;
		SCDgamepad1.dpad_right = gamepad1.dpad_right;
		SCDgamepad1.dpad_left = gamepad1.dpad_left;
		
		gamepad1.dpadThreshold = SCDgamepad1.dpadThreshold;
		
		gamepad1.id = SCDgamepad1.id; 
		
		gamepad1.ID_SYNTHETIC = SCDgamepad1.ID_SYNTHETIC;
		
		gamepad1.joystickDeadZone = SCDgamepad1.joystickDeadZone;
		
		gamepad1.timestamp = SCDgamepad1.timestamp
		
		
	}
	
	public void instantiateSCDgamepad() {
		SCDgamepad1 = new SCDgamepad1;
		
	}
}
